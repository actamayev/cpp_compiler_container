{
	"compilerOptions": {
	  "target": "es2021",
	  "module": "commonjs",
	  "rootDir": "./src",
	  "moduleResolution": "Node",
	  "baseUrl": "./",
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": true,
	  "strictNullChecks": true,
	  "skipLibCheck": true
	},
	"include": [
	  "src/**/*",
	  "*.config.mjs"
	],
	"exclude": [
	  "node_modules",
	  "dist"
	]
}
